    <!-- 引入qrcode库 -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    
    <script>
        // 存储所有链接的数据
        let linksDB = {};
        
        // 页面加载时初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 尝试从本地存储加载数据
            const savedLinks = localStorage.getItem('linksDB');
            if (savedLinks) {
                linksDB = JSON.parse(savedLinks);
                renderLinksList();
            }
            
            // 检查URL参数
            const urlParams = new URLSearchParams(window.location.search);
            const code = urlParams.get('code');
            if (code && linksDB[code]) {
                document.getElementById('search-code').value = code;
                searchLink();
            }
            
            // 如果当前页面是短链接跳转页，执行跳转
            handleRedirection();
        });
        
        // 处理短链接跳转
        function handleRedirection() {
            // 获取当前路径（去掉域名部分）
            const path = window.location.pathname.substring(1);
            
            // 如果路径不为空且不是index.html等管理页面
            if (path && !path.includes('.html') && path !== '') {
                // 查找对应的链接
                if (linksDB[path]) {
                    // 更新统计
                    linksDB[path].clicks = (linksDB[path].clicks || 0) + 1;
                    linksDB[path].lastAccessed = new Date().toISOString();
                    saveToLocalStorage();
                    
                    // 执行跳转
                    window.location.href = linksDB[path].url;
                } else {
                    // 如果没有找到，显示错误信息
                    document.body.innerHTML = `
                        <div style="text-align: center; padding: 50px; color: #333;">
                            <h1>链接未找到</h1>
                            <p>短链代码 "${path}" 不存在</p>
                            <p><a href="index.html">返回管理页面</a></p>
                        </div>
                    `;
                }
            }
        }
        
        // 生成随机代码
        function generateRandomCode(length = 6) {
            const chars = 'abcdefghijklmnopqrstuvwxyz0123456789';
            let result = '';
            for (let i = 0; i < length; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }
        
        // 生成短链接
        function generateShortLink() {
            const targetUrl = document.getElementById('target-url').value.trim();
            let customCode = document.getElementById('custom-code').value.trim();
            
            if (!targetUrl) {
                showNotification('请输入目标链接', 'error');
                return;
            }
            
            // 确保URL以http://或https://开头
            let finalUrl = targetUrl;
            if (!finalUrl.startsWith('http://') && !finalUrl.startsWith('https://')) {
                finalUrl = 'https://' + finalUrl;
            }
            
            // 生成代码
            let code;
            if (customCode) {
                // 验证自定义代码格式
                const validPattern = /^[a-zA-Z0-9\-_]+$/;
                if (!validPattern.test(customCode)) {
                    showNotification('自定义代码只能包含字母、数字、短横线和下划线', 'error');
                    return;
                }
                
                // 检查是否已存在
                if (linksDB[customCode]) {
                    showNotification('该代码已被使用，请选择其他代码', 'error');
                    return;
                }
                
                code = customCode;
            } else {
                // 生成随机代码，确保不重复
                do {
                    code = generateRandomCode();
                } while (linksDB[code]);
            }
            
            // 保存链接
            linksDB[code] = {
                url: finalUrl,
                createdAt: new Date().toISOString(),
                clicks: 0,
                lastAccessed: null
            };
            
            saveToLocalStorage();
            
            // 显示生成的链接
            const shortUrl = getShortUrl(code);
            document.getElementById('generated-short-url').textContent = shortUrl;
            document.getElementById('generated-original-url').textContent = `跳转到: ${finalUrl}`;
            document.getElementById('link-result').classList.add('show');
            
            // 更新链接列表
            renderLinksList();
            
            // 清空输入
            document.getElementById('target-url').value = '';
            document.getElementById('custom-code').value = '';
            
            showNotification('长效链接创建成功！', 'success');
            
            // 滚动到结果区域
            document.getElementById('link-result').scrollIntoView({ behavior: 'smooth' });
        }
        
        // 获取短链接URL
        function getShortUrl(code) {
            // 如果是本地测试，使用当前域名
            const baseUrl = window.location.origin + window.location.pathname.replace('index.html', '');
            return `${baseUrl}${code}`;
        }
        
        // 检查自定义代码可用性
        function checkCustomCode() {
            const customCode = document.getElementById('custom-code').value.trim();
            
            if (!customCode) {
                showNotification('请输入自定义代码', 'warning');
                return;
            }
            
            // 验证格式
            const validPattern = /^[a-zA-Z0-9\-_]+$/;
            if (!validPattern.test(customCode)) {
                showNotification('代码只能包含字母、数字、短横线和下划线', 'error');
                return;
            }
            
            // 检查是否已存在
            if (linksDB[customCode]) {
                showNotification('该代码已被使用', 'error');
            } else {
                showNotification('代码可用', 'success');
            }
        }
        
        // 查找链接
        function searchLink() {
            const code = document.getElementById('search-code').value.trim();
            
            if (!code) {
                showNotification('请输入要查找的短链代码', 'warning');
                return;
            }
            
            if (!linksDB[code]) {
                showNotification('未找到该短链代码', 'error');
                document.getElementById('edit-section').classList.remove('show');
                return;
            }
            
            // 显示编辑区域
            const link = linksDB[code];
            document.getElementById('edit-code').value = code;
            document.getElementById('edit-target-url').value = link.url;
            document.getElementById('click-count').textContent = link.clicks || 0;
            
            if (link.lastAccessed) {
                const lastDate = new Date(link.lastAccessed);
                document.getElementById('last-click').textContent = lastDate.toLocaleDateString();
            } else {
                document.getElementById('last-click').textContent = '从未访问';
            }
            
            document.getElementById('edit-section').classList.add('show');
            
            // 滚动到编辑区域
            document.getElementById('edit-section').scrollIntoView({ behavior: 'smooth' });
        }
        
        // 更新链接
        function updateLink() {
            const code = document.getElementById('edit-code').value;
            const newUrl = document.getElementById('edit-target-url').value.trim();
            
            if (!newUrl) {
                showNotification('请输入新的目标链接', 'warning');
                return;
            }
            
            // 确保URL格式正确
            let finalUrl = newUrl;
            if (!finalUrl.startsWith('http://') && !finalUrl.startsWith('https://')) {
                finalUrl = 'https://' + finalUrl;
            }
            
            // 更新链接
            linksDB[code].url = finalUrl;
            saveToLocalStorage();
            
            // 更新链接列表显示
            renderLinksList();
            
            showNotification('链接更新成功！', 'success');
        }
        
        // 渲染链接列表
        function renderLinksList() {
            const container = document.getElementById('links-list');
            container.innerHTML = '';
            
            const codes = Object.keys(linksDB);
            
            if (codes.length === 0) {
                container.innerHTML = '<p style="color: #666; text-align: center;">暂无链接，请先创建一个</p>';
                return;
            }
            
            // 按创建时间排序（最新的在前面）
            codes.sort((a, b) => new Date(linksDB[b].createdAt) - new Date(linksDB[a].createdAt));
            
            codes.forEach(code => {
                const link = linksDB[code];
                const item = document.createElement('div');
                item.className = 'link-item';
                
                const shortUrl = getShortUrl(code);
                const displayUrl = link.url.length > 50 ? link.url.substring(0, 50) + '...' : link.url;
                
                item.innerHTML = `
                    <div class="link-info">
                        <div class="link-name">${code}</div>
                        <div class="link-short">${shortUrl}</div>
                        <div class="link-original" title="${link.url}">${displayUrl}</div>
                    </div>
                    <div class="link-actions-small">
                        <button class="btn btn-small" onclick="editLink('${code}')" style="padding: 5px 10px; font-size: 12px;">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-secondary btn-small" onclick="copyLink('${code}')" style="padding: 5px 10px; font-size: 12px;">
                            <i class="fas fa-copy"></i>
                        </button>
                        <button class="btn btn-small" onclick="deleteLink('${code}')" style="padding: 5px 10px; font-size: 12px; background: #dc3545;">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
                
                container.appendChild(item);
            });
        }
        
        // 编辑链接
        function editLink(code) {
            document.getElementById('search-code').value = code;
            searchLink();
        }
        
        // 复制链接
        function copyLink(code) {
            const shortUrl = getShortUrl(code);
            navigator.clipboard.writeText(shortUrl).then(() => {
                showNotification('链接已复制到剪贴板', 'success');
            });
        }
        
        // 删除链接
        function deleteLink(code) {
            if (confirm(`确定要删除短链 "${code}" 吗？`)) {
                delete linksDB[code];
                saveToLocalStorage();
                renderLinksList();
                document.getElementById('edit-section').classList.remove('show');
                showNotification('链接已删除', 'success');
            }
        }
        
        // 复制短链接
        function copyShortUrl() {
            const shortUrl = document.getElementById('generated-short-url').textContent;
            navigator.clipboard.writeText(shortUrl).then(() => {
                showNotification('链接已复制到剪贴板', 'success');
            });
        }
        
        // 测试跳转
        function testShortUrl() {
            const shortUrl = document.getElementById('generated-short-url').textContent;
            window.open(shortUrl, '_blank');
        }
        
        // 分享链接
        function shareShortUrl() {
            const shortUrl = document.getElementById('generated-short-url').textContent;
            document.getElementById('share-url').value = shortUrl;
            
            // 生成二维码
            const qrcodeDiv = document.getElementById('qrcode');
            qrcodeDiv.innerHTML = '';
            QRCode.toCanvas(qrcodeDiv, shortUrl, { width: 200 }, function(error) {
                if (error) console.error(error);
            });
            
            document.getElementById('share-modal').classList.add('show');
        }
        
        // 复制分享链接
        function copyShareUrl() {
            const shareUrl = document.getElementById('share-url').value;
            navigator.clipboard.writeText(shareUrl).then(() => {
                showNotification('已复制到剪贴板', 'success');
            });
        }
        
        // 关闭模态框
        function closeModal() {
            document.getElementById('share-modal').classList.remove('show');
        }
        
        // 保存到本地存储
        function saveToLocalStorage() {
            localStorage.setItem('linksDB', JSON.stringify(linksDB));
        }
        
        // 显示通知
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            
            // 设置颜色
            if (type === 'success') {
                notification.style.background = '#28a745';
            } else if (type === 'error') {
                notification.style.background = '#dc3545';
            } else if (type === 'warning') {
                notification.style.background = '#ffc107';
                notification.style.color = '#333';
            }
            
            notification.classList.add('show');
            
            // 3秒后隐藏
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        // 导出数据（备份）
        function exportData() {
            const dataStr = JSON.stringify(linksDB, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = 'links-backup.json';
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
        }
        
        // 导入数据（恢复）
        function importData() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            
            input.onchange = e => {
                const file = e.target.files[0];
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    try {
                        const importedData = JSON.parse(e.target.result);
                        linksDB = importedData;
                        saveToLocalStorage();
                        renderLinksList();
                        showNotification('数据导入成功！', 'success');
                    } catch (error) {
                        showNotification('导入失败：文件格式错误', 'error');
                    }
                };
                
                reader.readAsText(file);
            };
            
            input.click();
        }
    </script>
    
    <!-- 添加导出/导入按钮 -->
    <div style="position: fixed; bottom: 20px; right: 20px; display: flex; gap: 10px;">
        <button class="btn btn-secondary" onclick="exportData()" style="padding: 10px 15px; font-size: 14px;">
            <i class="fas fa-download"></i> 备份
        </button>
        <button class="btn btn-secondary" onclick="importData()" style="padding: 10px 15px; font-size: 14px;">
            <i class="fas fa-upload"></i> 恢复
        </button>
    </div>
</body>
</html>