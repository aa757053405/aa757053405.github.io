    <!-- 通知消息 -->
    <div id="notification" class="notification"></div>
    
    <!-- 分享模态框 -->
    <div id="share-modal" class="modal">
        <div class="modal-content">
            <h3 style="margin-bottom: 20px;">分享链接</h3>
            <div class="form-group">
                <label>长效链接</label>
                <input type="text" id="share-url" readonly style="background: #e9ecef; margin-bottom: 15px;">
            </div>
            <div class="form-group">
                <label>生成二维码</label>
                <div id="qrcode" style="margin: 15px 0; text-align: center;"></div>
            </div>
            <div style="display: flex; gap: 10px; justify-content: flex-end;">
                <button class="btn" onclick="copyShareUrl()">
                    <i class="fas fa-copy"></i> 复制链接
